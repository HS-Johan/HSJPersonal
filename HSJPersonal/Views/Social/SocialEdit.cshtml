@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Create Product";
}

@model HSJPersonal.DataModels.Social

<div class="card card-info col-8 justify-content-center m-0">
	<div class="card-header">
		<h3 class="card-title">
			Edit Social
		</h3>
	</div>
	<form asp-controller="Social" asp-action="SocialEdit">
		<div class="card-body">

			<input asp-for="SocialId" hidden />

			<div class="form-group">
				<lebel>Social</lebel>
				<input required type="text" class="form-control border border-primary" asp-for="SocialName" />
			</div>
			<div class="form-group">
				<lebel>Icon</lebel>
				<input required type="text" class="form-control border border-primary" asp-for="SocialIcon" />
			</div>
			<div class="form-group">
				<lebel>Link</lebel>
				<input required type="text" class="form-control border border-primary" asp-for="SocialLink" />
			</div>


		</div>

		<div class="card-footer">
			<button type="submit" class="btn btn-success">Update</button>
		</div>
	</form>
</div>