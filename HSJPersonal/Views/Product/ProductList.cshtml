@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Product List";
}

@model IEnumerable<HSJPersonal.DataModels.Product>

<div class="card">

	<div class="card-header">
		<h3 class="card-title">Title</h3>

		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
				<i class="fas fa-minus"></i>
			</button>
			<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
				<i class="fas fa-times"></i>
			</button>
		</div>
	</div>

	<div class="card-body">


		<table class="table table-hover">
			<thead class="table-info">
				<tr>
					<th class="col-1">Serial</th>
					<th class="col-2">Product Name</th>
					<th class="col-2">Product Price</th>
					<th class="col-2">Product Image</th>
					<th class="col-2">Product Ammount</th>
					<th class="col-1">Is Active</th>
					<th class="col-2">Action</th>
				</tr>
			</thead>

			<tbody>

				@{
					int serial = 1;
					foreach (var data in Model)
					{

						<tr>
							<td>@serial</td>
							<td>@data.ProductName</td>
							<td>@data.ProductPrice</td>
							<td>
								<img src="@data.ProductImage" style="width: 20%;" />
							</td>
							<td>@data.ProductAmmount</td>
							<td>@data.IsActive</td>
							<td>
								<a class="btn btn-success" asp-action="ProductEdit" asp-route-id="@data.ProductId">Edit</a>
								<a class="btn btn-danger" asp-action="ProductDelete" asp-route-id="@data.ProductId">Delete</a>
							</td>
						</tr>
						serial++;
					}
				}

			</tbody>

		</table>


	</div>

</div>