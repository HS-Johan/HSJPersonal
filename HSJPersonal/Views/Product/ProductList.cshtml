@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Product List";
}

@model IEnumerable<HSJPersonal.DataModels.Product>

<div class="card">

	<div class="card-header">
		<h3 class="card-title">Title</h3>

		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
				<i class="fas fa-minus"></i>
			</button>
			<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
				<i class="fas fa-times"></i>
			</button>
		</div>
	</div>

	<div class="card-body">


		<table class="table table-hover">
			<thead class="table-info">
				<tr>
					<th>Serial</th>
					<th>Product Name</th>
					<th>Product Price</th>
					<th>Product Image</th>
					<th>Product Ammount</th>
					<th>Action</th>
				</tr>
			</thead>

			<tbody>

				@{
					int serial = 1;
					foreach (var data in Model)
					{

						<tr>
							<td>@serial</td>
							<td>@data.ProductName</td>
							<td>@data.ProductPrice</td>
							<td>@data.ProductImage</td>
							<td>@data.ProductAmmount</td>
							<td>
								<a class="btn btn-info" asp-action="ContactEdit" asp-route-id="@data.ProductId">Info</a>
								<a class="btn btn-danger" asp-action="ContactDelete" asp-route-id="@data.ProductId">Delete</a>

							</td>
						</tr>
						serial++;
					}
				}

			</tbody>

		</table>


	</div>

</div>