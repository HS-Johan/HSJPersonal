@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Admin Page";
}

@model IEnumerable<HSJPersonal.DataModels.Blog>

<h1>Blog List</h1>

<div class="card">

	<div class="card-header">
		<h3 class="card-title">Title</h3>

		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
				<i class="fas fa-minus"></i>
			</button>
			<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
				<i class="fas fa-times"></i>
			</button>
		</div>
	</div>

	<div class="card-body">


		<table class="table table-hover">
			<thead class="table-info">
				<tr>
					<th class="col-1">Serial</th>
					<th class="col-2">Thumbnail</th>
					<th class="col-2">Title</th>
					<th class="col-5">Content</th>
					<th class="col-2">Action</th>
				</tr>
			</thead>

			<tbody>

				@{
					int serial = 1;
					foreach (var data in Model)
					{

						<tr>
							<td>@serial</td>
							<td>
								<img src="@data.BlogThumbnail" style="width: 100%;" />
							</td>
							<td>@data.BlogTitle</td>
							<td>@data.BlogContent</td>
							<td>
								<a class="btn btn-success" asp-action="BlogEdit" asp-route-id="@data.BlogId">Edit</a>
								<a class="btn btn-danger" asp-action="BlogDelete" asp-route-id="@data.BlogId">Delete</a>
							</td>
						</tr>
						serial++;
					}
				}

			</tbody>

		</table>


	</div>

</div>

